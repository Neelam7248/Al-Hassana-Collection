const express = require("express");
const router = express.Router();
const User = require("../models/User"); // Admin model ka path adjust karein
const auth=require("../middleware/auth");
// @route   GET /api/admin/contact
// @desc    Get admin contact info
// @access Public
router.get("/contact", auth , async (req, res) => {
  try {
    const admins = await User.find({ userType: "admin" }); // array of admins

    if (!admins || admins.length === 0) {
      return res.status(404).json({ error: "No admins found" });
    }

    // Map to return only necessary fields
    const adminContacts = admins.map(admin => ({
      name: admin.name,
      phone: admin.phone,
      email: admin.email || "",
      userType: admin.userType
    }));

    res.status(200).json({message:"admins are thess ",adminContacts}); // array of admins
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: "Failed to fetch admin contacts" });
  }
});
module.exports = router;
